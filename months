def monthString(monthNum):
      monthNum  = ''
      if month == '1':
          num_month = 'January'
      elif month == '2':
          num_month = 'February'
      elif month == '3':
         num_month = 'March'
      elif month == '4':
          num_month = 'April'
      elif month == '5':
           num_month = 'May'
      elif month == '6':
          num_month = 'June'
      elif month == '7':
          num_month = 'July'
      elif month == '8':
         num_month = 'August'
      elif month == '9':
        num_month = 'September'
      elif month == '10':
        num_month = 'October'
      elif month == '11':
        num_month = 'November'
      elif month == '12':
          num_month ='December'
      return num_month
        
     
     monthString = ""
     
     return(monthString)



def main():
     n = int(input('Enter the number of the month: '))
     mString = monthString(n)
     print('The month is', mString)



