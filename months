#A program that uses functions to print out months.
#Modified by: Kylah Kerr

def monthString(monthNum):
      monthNum  = ''
      if month == '1':
            monthNum = 'january'
      elif month == '2':
            monthNum = 'february'
      elif month == '3':
            monthNum = 'march'
      elif month == '4':
            monthNum = 'april'
      elif month == '5':
            monthNum = 'may'
      elif month == '6':
            monthNum = 'june'
      elif month == '7':
            monthNum = 'july'
      elif month == '8':
            monthNum = 'august'
      elif month == '9':
            monthNum = 'sep'
      elif month == '10':
            monthNum = 'october'
      elif month == '11':
            monthNum = 'november'
      elif month == '12':
            monthNum ='december'
            
     
     monthString = ""
     
     return(monthString)



def main():
     n = int(input('Enter the number of the month: '))
     mString = monthString(n)
     print('The month is', mString)



#Allow script to be run directly:
if __name__ == "__main__":
     main()
                   
